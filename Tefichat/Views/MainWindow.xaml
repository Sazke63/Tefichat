<Window x:Class="Tefichat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Tefichat.Views.Controls"
        xmlns:vm="clr-namespace:Tefichat.ViewModels"
        Style="{DynamicResource WindowStyle}"
        WindowStartupLocation="CenterScreen"
        Title="" mc:Ignorable="d" 
        Height="600" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginPhoneVM}">
            <view:LoginPhone/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SendCodeVM}">
            <view:SendCode/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MainVM}">
            <view:Main/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <ContentPresenter Content="{Binding CurrentVM}"/>
    </Grid>
</Window>
